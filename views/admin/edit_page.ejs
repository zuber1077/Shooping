<%- include('../_layouts/adminheader') %>

            <div class="row">
                <div class="col-md-10 col-md-offset-1">
                    <div class="p-20">
                        <div class="">
                            <form method="POST" action="/admin/pages/edit-page/<%= slug %>">
                                <div class="form-group m-b-20">
                                    <label >Title</label>
                                    <input type="text" class="form-control" name="title" value="<%= title %>"  placeholder="Enter title">
                                </div>
                                <div class="form-group m-b-20">
                                    <label>Slug</label>
                                    <input type="text" class="form-control" name="slug" value="<%= slug %>" placeholder="Enter Slug">
                                </div>
                                <div class="form-group">
                                    <label>Content</label>
                                    <textarea name="content" class="form-control" placeholder="Enter Content"><%= content %></textarea>
                                </div>
                                <input type="hidden" name="id" value="<%= id %>">
                                <button type="submit" class="btn btn-success waves-effect waves-light">Submit</button>
                                <button type="button" class="btn btn-danger waves-effect waves-light">Discard</button>
                            </form>
                        </div>
                    </div> <!-- end p-20 -->
                </div> <!-- end col -->
            </div>
            <!-- end row -->


<%- include('../_layouts/adminfooter') %>