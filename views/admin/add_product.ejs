<%- include('../_layouts/adminheader') %>

<style>

#imgPreview{
    margin: 20px;
}
</style>

            <div class="row">
                <div class="col-md-10 col-md-offset-1">
                    <div class="p-20">
                        <div class="">
                            <form method="POST" action="/admin/products/add-product" enctype="multipart/form-data">
                                <div class="form-group m-b-20">
                                    <label >Title</label>
                                    <input type="text" class="form-control" name="title"   placeholder="Enter title">
                                </div>
                                <div class="form-group">
                                    <label>Description</label>
                                    <textarea name="desc" class="form-control" placeholder="Enter Description"></textarea>
                                </div>
                                <div class="form-group">
                                    <select name="category" class="form-control">
                                        <% categories.forEach(function(cat){ %>
                                            <option value="<%= cat.slug %>"><%= cat.title %></option>
                                        <% }); %>
                                    </select>
                                <div class="form-group m-b-20">
                                    <label>Price</label>
                                    <input type="text" class="form-control" name="price"  placeholder="Enter Price">
                                </div>
                                <div class="form-group m-b-20">
                                    <label>Image</label>
                                    <input type="file" name="image" id="img">
                                    <img class="img-responsive img-rounded" id="imgPreview" >
                                </div>
                                
                                <button type="submit" class="btn btn-success waves-effect waves-light">Submit</button>
                                <button type="button" class="btn btn-danger waves-effect waves-light">Discard</button>
                            </form>
                        </div>
                    </div> <!-- end p-20 -->
                </div> <!-- end col -->
            </div>
            <!-- end row -->


<%- include('../_layouts/adminfooter') %>
<script>
    
    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            
            reader.onload = function(e) {
                $("#imgPreview").attr('src', e.target.result).width(100).height(100);
            }
            
            reader.readAsDataURL(input.files[0]);
        }
    }
    
    $("#img").change(function() {
        readURL(this);
    });
    
</script>